#####################
# Application keybindings #
#####################

# Launch Browser (Google-chrome)
super + b
    google-chrome-stable

# Launch Rofi Application Menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme ~/.config/rofi/config.rasi

# Reload sxhkd (Hotkey Daemon)
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

# Launch File Manager (Pcmanfm)
super + f
	pcmanfm

# Launch Gedit (Text Editor)
super + e
	gedit

# Power Off/Reboot
super + x
	~/.config/suckless/scripts/power

